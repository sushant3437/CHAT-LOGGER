<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
   
    <h1 class="heading">CHAT LOGGER</h1>
    <form method="GET" action="/chats/new">
        <button>New chat</button>
    </form>
    <br/>
    <% for(let chat of chats) { %>
        <div class="chat">
            <p class="from">from: <i><%= chat.from %></i></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <form method="GET" action="/chats/<%= chat._id %>/edit">
                    <button class="edit">Edit</button>
                </form>
                <br>
                <!-- to delete the chat -->
                <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                    <button class="delete">Delete</button>
                </form>
            </div>
            <p class="receive">Received by: <i><%= chat.to %></i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0, 4).join("-") %></p>
        </div>
        <br>
        <br>
    <% } %>
</body>
</html>
